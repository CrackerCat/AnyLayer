<?xml version="1.0" encoding="utf-8"?>
<per.goweii.anylayer.dialog.ContainerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/anylayler_dialog_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/anylayler_dialog_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        tools:ignore="ContentDescription" />

    <per.goweii.anylayer.widget.SwipeLayout
        android:id="@+id/anylayler_dialog_content_wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</per.goweii.anylayer.dialog.ContainerLayout>